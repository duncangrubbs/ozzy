{
  "compilerOptions": {
    "lib": ["dom", "es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true
  }
}
